<definitions>
  <component category='PROCESSOR'
             id='Script'
             inputMessageType='any'
             showInputModel='true'
             inputOutputModelsMatch='false'
             outputMessageType='any'
             resourceCategory='any'
             supportsMultipleThreads='true'>
    <name>Groovy脚本</name>
    <className>org.jumpmind.metl.core.runtime.component.Script</className>
    <keywords>groovy,logic,java</keywords>
    <description></description>
    <settings>
      <setting id='imports'
               required='true'
               type='script'
               visible='false'>
        <name>导入外部类</name>
      </setting>
      <setting id='methods'
               required='true'
               type='script'
               visible='false'>
        <name>额外的方法</name>
      </setting>
      <setting id='init.script'
               required='true'
               type='script'
               visible='false'>
        <name>初始化脚本</name>
      </setting>
      <setting id='handle.msg.script'
               required='true'
               type='script'
               visible='false'>
        <name>处理消息脚本</name>
        <defaultValue>
forwardMessage()
        </defaultValue>
      </setting>
      <setting id='on.flow.success.script'
               required='true'
               type='script'
               visible='false'>
        <name>成功结束脚本</name>
      </setting>
      <setting id='on.flow.error.script'
               required='true'
               type='script'
               visible='false'>
        <name>失败结束脚本</name>
      </setting>
    </settings>
  </component>
</definitions>
