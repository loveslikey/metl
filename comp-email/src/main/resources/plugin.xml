<definitions>
  <component category='Writer'
             id='35c4c0ae-b040-4f93-b212-5b92619c4064'
             inputMessageType='any'
             showInputModel='true'
             inputOutputModelsMatch='false'
             outputMessageType='any'
             resourceCategory='mailsession'>
    <name>电子邮件写入器</name>
    <keywords>send,email,smtp,write</keywords>
    <className>org.jumpmind.metl.core.runtime.component.EmailWriter</className>
    <description></description>
    <settings>
      <setting id='subject'
               required='true'
               type='text'>
        <name>主题</name>
      </setting>
      <setting id='body'
               required='true'
               type='multiline_text'>
        <name>信息</name>
      </setting>
      <setting id='from.line'
               required='true'
               type='text'>
        <name>发件人:</name>
      </setting>
      <setting id='to.line'
               required='false'
               type='text'>
        <name>收件人:</name>
      </setting>
      <setting id='cc.line'
               required='false'
               type='text'>
        <name>抄送:</name>
      </setting>
      <setting id='bcc.line'
               required='false'
               type='text'>
        <name>密送:</name>
      </setting>
      <setting id='body.charset'
               required='false'
               type='text'>
        <name>字符集:</name>
      </setting>
      <setting id='sub.type'
               required='false'
               type='text'>
        <name>MIME Subtype:</name>
      </setting>
      <setting id='source.step.email.addresses'
               required='false'
               type='source_step'>
        <name>Source Step For Email Addresses</name>
      </setting>
      <setting id='source.step.email.addresses.type'
               required='false'
               type='choice'>
        <name>Source Step Email Addresses Type</name>
        <defaultValue>TO</defaultValue>
        <choices>
          <choice>TO</choice>
          <choice>CC</choice>
          <choice>BCC</choice>
        </choices>
      </setting>
      <setting id='one.email.per.recipient'
               required='false'
               type='boolean'>
        <name>One Email per Recipient</name>
        <defaultValue>false</defaultValue>
      </setting>
      <setting id='include.attachment'
               required='false'
               type='boolean'>
        <name>Include Attachment</name>
        <defaultValue>false</defaultValue>
      </setting>
      <setting id='attachment.file.path'
               required='false'
               type='text'>
        <name>Attachment File Full Path</name>
      </setting>
      <setting id='run.when'
               required='false'
               type='choice'>
        <name>当...时运行</name>
        <defaultValue>PER UNIT OF WORK</defaultValue>
        <choices>
          <choice>PER UNIT OF WORK</choice>
          <choice>PER MESSAGE</choice>
          <choice>PER ENTITY</choice>
        </choices>
      </setting>
    </settings>
  </component>
</definitions>
